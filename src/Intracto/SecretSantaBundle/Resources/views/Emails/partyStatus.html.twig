{% extends "IntractoSecretSantaBundle:Emails:baseEmail.html.twig" %}
{% block main %}
    <table width="640" border="0" cellpadding="0" cellspacing="0" align="center" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
        <tr>
            <td width="37" align="left">
            </td>
            <td width="566">
                <p>{{ 'emails-party_status.message.html'|trans({'%owner%': party.getOwnerName})|raw }}</p>
                <table cellspacing="0" cellpadding="3" style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color:#333333; line-height: 25px;">
                    <thead>
                    <tr>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-party_status.label.name'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-party_status.label.email'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-party_status.label.confirmed'|trans }}</th>
                        <th style="border-bottom: 1px solid #000; text-align: left;">{{ 'emails-party_status.label.wishlist_filled'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for participant in party.participants %}
                        <tr>
                            <td>{{ participant.name }}</td>
                            <td>{{ participant.email }}</td>
                            <td>{% if participant.viewdate %}{{ 'emails-party_status.yes'|trans }}{% else %}{{ 'emails-party_status.not_yet'|trans }}{% endif %}</td>
                            <td>{% if participant.wishlistItems is not empty %}{{ 'emails-party_status.yes'|trans }}{% else %}{{ 'emails-party_status.not_yet'|trans }}{% endif %}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <br/>
                <table class="button">
                    <tr>
                        <td align="center" width="auto" bgcolor="#bd1019" style="padding-top: 14px; padding-right: 80px; padding-bottom: 14px; padding-left: 80px;
                        background: #bd1019; -webkit-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); -moz-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
                        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2); -moz-border-radius: 6px; -webkit-border-radius: 6px; border-radius: 6px; color: #fff; border: solid 1px #5b1b1c;
                        font-size: 14px; font-weight: normal; text-decoration: none; display: block;" class="buttonTop">

                            <a href="{{ url('party_manage', { 'listurl': party.listurl }) }}?utm_source=notification_mail&utm_medium=email&utm_campaign=party_status"
                               style="color: #FFF; text-decoration: none; font-family: Helvetica, Arial,sans-serif; vertical-align: baseline;"
                            >
                                {{ 'emails-party_status.btn.partystatus'|trans }}
                            </a>

                        </td>
                    </tr>
                    <tr>
                        <td width="auto" style="display: block; font-size: 16px;" class="buttonBottom">&nbsp;</td>
                    </tr>
                </table>
            </td>
            <td width="37" align="right">
            </td>
        </tr>

    </table>
{% endblock %}
