# sh/ksh initialization

PATH=/sbin:/usr/sbin:/bin:/usr/bin:/usr/X11R6/bin:/usr/local/sbin:/usr/local/bin
export PATH
PKG_PATH=http://{{ openbsd_mirror }}/pub/OpenBSD/{{ openbsd_release }}/packages/{{ openbsd_arch }}/
export PKG_PATH
: ${HOME='/root'}
export HOME
umask 022

case "$-" in
*i*)    # interactive shell
	if [ -x /usr/bin/tset ]; then
		if [ X"$XTERM_VERSION" = X"" ]; then
			eval `/usr/bin/tset -sQ '-munknown:?vt220' $TERM`
		else
			eval `/usr/bin/tset -IsQ '-munknown:?vt220' $TERM`
		fi
	fi
	;;
esac


alias vi="/usr/local/bin/vim"
alias vless="/usr/local/share/vim/vim80/macros/less.sh"

if [ "$TERM" = "xterm" -o "$TERM" = "xterm-color" -o "$TERM" = "screen" -o "$TERM" = "xterm-256color" ]; then
    PS1='[\[\e[36m\]\u@\h \[\e[33m\]\w\[\e[0m\]]\n\$ '
else
    PS1='[\u@\h \w]\n\$ '
fi
export PS1

